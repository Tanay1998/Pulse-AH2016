<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

    <ImageView
        android:id="@+id/messageListImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/messageListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/messageListImage"
        android:text="Tanay Kothari"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/messageListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageListName"
        android:layout_toRightOf="@id/messageListImage"
        android:text="Yo, wassup nigga"
        android:textColor="#232323"
        android:textSize="15sp"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"/>

</RelativeLayout>